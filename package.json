{
  "name": "gulp-starter",
  "version": "1.0.0",
  "description": "Gulp starter, all you need for static website coding. Includes live reload, SASS,  autoprefixer, EJS/PUG template engines, images reducing, JS/SASS linters, FTP deployment, JS bundling with browserify, ES2015+ ready, JS/CSS minification.",
  "main": "gulpfile.babel.js",
  "author": "alekseibakai",
  "license": "ISC",
  "scripts": {
    "dev": "gulp dev",
    "build": "gulp build",
    "stylelint": "stylelint '**/*.scss'",
    "stylelint:fix": "stylelint '**/*.scss' --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/register": "^7.13.16",
    "babelify": "^10.0.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.3",
    "husky": "^6.0.0",
    "path": "^0.12.7",
    "prettier": "2.3.0",
    "sass-lint-auto-fix": "^0.21.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0"
  },
  "dependencies": {
    "browser-sync": "^2.26.14",
    "browserify": "^17.0.0",
    "del": "^6.0.0",
    "event-stream": "4.0.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-ejs": "^5.1.0",
    "gulp-eslint": "^6.0.0",
    "gulp-eslint-if-fixed": "^1.0.0",
    "gulp-if": "^3.0.0",
    "gulp-image": "^6.2.1",
    "gulp-notify": "^4.0.0",
    "gulp-nunjucks-render": "^2.2.3",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-ftp": "^0.6.1",
    "vinyl-source-stream": "^2.0.0",
    "yargs": "^17.0.1"
  },
  "lint-staged": {
    "*.scss": [
      "yarn stylelint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "gulp eslint && yarn stylelint:fix"
    }
  }
}
